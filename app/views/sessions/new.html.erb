<h1 class="text-center mt-4">Login for Alphalfa Blog</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url:login_path, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "col-form-label text-light" %>
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-form-label text-light" %>
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Cancel and Return to Article listing]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>